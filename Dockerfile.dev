FROM python:3.11-slim

ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    PIP_NO_CACHE_DIR=1

WORKDIR /app

RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    && rm -rf /var/lib/apt/lists/*

COPY requirements.txt /app/requirements.txt
RUN pip install -r requirements.txt

# Keep a copy of the source inside the image so the app can boot even
# before the host volume is mounted (helps CI / first boot).
COPY . /app
ENV FLASK_APP=app.py \
    PYTHONPATH=/app \
    FLASK_DEBUG=1

EXPOSE 8081

# Use a WS-capable worker in dev so /ws works
CMD ["gunicorn", "-k", "geventwebsocket.gunicorn.workers.GeventWebSocketWorker", "-w", "2", "--timeout", "90", "-b", "0.0.0.0:8081", "app:app"]
